[alias]
ap = add --patch
ci = commit -v
co = checkout
d = diff
dc = diff --cached
f = fetch --prune
graph = log --graph --oneline --decorate=short --all
l = log
ll = log --oneline --format='%H' -1
lo = log --oneline
lp = log --patch-with-stat
ls = log --stat
p = pull --prune --rebase
pushf = push --force-with-lease
st = status
subs = submodule update --init --recursive
unstage = reset HEAD
list-mod = diff --name-only --diff-filter=M
lmod = diff --name-only --diff-filter=M
lum = diff --name-only --diff-filter=UX

[color]
branch = auto
diff = auto
grep = auto
interactive = auto
status = auto
ui = auto

[core]
autocrlf = input
excludesfile = ~/.dotfiles/config/global.gitignore
pager = less

[diff]
algorithm = histogram
tool = difftastic

[difftool]
prompt = false

[difftool "difftastic"]
cmd = difft "$LOCAL" "$REMOTE"

[difftool "Kaleidoscope"]
cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[github]
user = sirreal

[init]
defaultBranch = main

[include]
path = ~/.gitconfig.local

[maintenance "gc"]
enabled = true

[merge]
conflictstyle = diff3

[mergetool]
keepBackup = false

[mergetool "Kaleidoscope"]
cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
trustExitCode = true

[mergetool "vimdiff"]
trustExitCode = false

[pager]
difftool = true

[push]
default = simple
followTags = true

[rebase]
autosquash = true
stat = true

[rerere]
enabled = true

[user]
email = sirreal@users.noreply.github.com
name = Jon Surrell
useConfigOnly = true
