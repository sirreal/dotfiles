[user]
	name = Jon Surrell
	useConfigOnly = true
	signingkey = 263A660FF6EFB758
	email = jon.surrell@automattic.com
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
	grep = auto
[core]
	excludesfile = ~/.dotfiles/config/global.gitignore
	pager = less
	autocrlf = input
[github]
	user = sirreal
[push]
	default = simple
	followTags = true
[alias]
	ap = add --patch
	ci = commit -v
	co = checkout
	d = diff
	dc = diff --cached
	f = fetch --prune
	graph = log --graph --oneline --decorate=short --all
	l = log
	ll = log --oneline --format='%H' -1
	lo = log --oneline
	lp = log --patch-with-stat
	ls = log --stat
	p = pull --verbose --prune --rebase
	pushf = push --force-with-lease
	st = status
	subs = submodule update --init --recursive
	unstage = reset HEAD
[diff]
	algorithm = histogram
[rebase]
	autosquash = true
	stat = true
[commit]
	gpgSign = true
