[alias]
ap = add --patch
ci = commit -v
co = checkout
d = diff
dc = diff --cached
f = fetch --prune
graph = log --graph --oneline --decorate=short --all
l = log
# Log the full commit hash of the last commit, handy to copy and cherry pick, eg `git ll | pbcopy`
ll = log --oneline --format='%H' -1
lo = log --oneline
lp = log --patch-with-stat
ls = log --stat
p = pull --prune --rebase
pa = p --autostash
pushf = push --force-with-lease
st = status
subs = submodule update --init --recursive
unstage = reset HEAD
# List modified files
lmod = diff --name-only --diff-filter=M
# List unmerged files
lum = diff --name-only --diff-filter=UX
# Pretty print local branches sorted by most recently updated
local-branches = for-each-ref --sort='-committerdate' --format='%(align:20,left)%(color:green)%(committerdate:relative)%(color:reset)%(end) %(color:red)%(HEAD)%(color:reset)%(refname:short) %(color:blue)%(worktreepath)%(color:reset)' refs/heads/

[branch]
sort = -committerdate

[color]
branch = auto
diff = auto
grep = auto
interactive = auto
status = auto
ui = auto

[column]
ui = auto

[core]
autocrlf = input
excludesfile = ~/.dotfiles/config/global.gitignore
pager = less

[diff]
algorithm = histogram
tool = difftastic

[difftool]
prompt = false

[difftool "difftastic"]
cmd = difft "$LOCAL" "$REMOTE"

[difftool "Kaleidoscope"]
cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[github]
user = sirreal

[init]
defaultBranch = main


[maintenance "gc"]
enabled = true

[merge]
conflictstyle = diff3

[mergetool]
keepBackup = false

[mergetool "Kaleidoscope"]
cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
trustExitCode = true

[mergetool "vimdiff"]
trustExitCode = false

[pager]
difftool = true

[push]
default = simple
followTags = true
autoSetupRemote = true

[rebase]
autosquash = true
stat = true

[rerere]
enabled = true

[user]
email = sirreal@users.noreply.github.com
name = Jon Surrell
useConfigOnly = true

[include]
path = ~/.gitconfig.local
