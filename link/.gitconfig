[alias]
	ap = add --patch
	ci = commit -v
	co = checkout
	d = diff
	dc = diff --cached
	f = fetch --prune
	graph = log --graph --oneline --decorate=short --all
	l = log
	ll = log --oneline --format='%H' -1
	lo = log --oneline
	lp = log --patch-with-stat
	ls = log --stat
	p = pull --prune --rebase
	pushf = push --force-with-lease
	st = status
	subs = submodule update --init --recursive
	unstage = reset HEAD
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto
	ui = auto
[core]
	autocrlf = input
	excludesfile = ~/.dotfiles/config/global.gitignore
	pager = less
[diff]
	algorithm = histogram
[difftool]
[github]
	user = sirreal
[merge]
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[push]
	default = simple
	followTags = true
[rebase]
	autosquash = true
	stat = true
[user]
	email = sirreal@users.noreply.github.com
	name = Jon Surrell
	useConfigOnly = true
[mergetool "vimdiff"]
	trustExitCode = false
[include]
	path = ~/.gitconfig.local
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[rerere]
	enabled = true

[init]
	defaultBranch = main
[maintenance "gc"]
	enabled = true
