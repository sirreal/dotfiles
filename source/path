_paths=(/usr/local/bin /usr/local/sbin /usr/local/opt/ruby/bin /usr/local/share/npm/bin ~/go/bin ~/.cabal/bin ~/.rvm/bin ~/.composer/vendor/bin ~/.npm-globals/bin ~/bin)

for _p in ${_paths[@]}; do
  if [[ -d $_p ]] && [[ ":$PATH:" != *":$_p:"* ]]; then
    export PATH="$_p:$PATH"
  fi
done
unset _p
unset _paths

if [[ -d "$HOME/go" ]]; then
  export GOPATH="$HOME/go"
fi
